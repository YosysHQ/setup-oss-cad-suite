{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"lib": [
			"ES6"
		]
	},
	"exclude": ["node_modules"]
}
